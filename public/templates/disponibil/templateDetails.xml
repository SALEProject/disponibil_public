<?xml version="1.0" encoding="utf-8"?>
<extension version="3.4" type="template">
	<name>disponibil</name>
	<creationDate>2015-03-03</creationDate>
	<author>Ghergic Raul</author>
	<authorEmail>raul@bitnova.ro</authorEmail>
	<authorUrl>www.bitnova.ro</authorUrl>
	<copyright>Ghergic Raul 2015</copyright>
	<license>GNU/GPL</license>
	<version>1.0.2</version>
	<description>Tenplate Disponibil BRM</description>
	<files>
		<filename>index.php</filename>
		<filename>templateDetails.xml</filename>
		<folder>images</folder>
		<folder>css</folder>
		<folder>html</folder>
		<folder>js</folder>
		<folder>language</folder>
	</files>
	<positions>
		<position>breadcrumb</position>
		<position>left</position>
		<position>right</position>
		<position>top</position>
		<position>user1</position>
		<position>user2</position>
		<position>user3</position>
		<position>user4</position>
		<position>footer</position>
		<position>Main Menu</position>
		<position>Language Selector</position>
		<position>Disponibil News</position>
		<position>Disponibil Main</position>
		<position>Main Rings</position>
	</positions>
	
		<config>
		<fields name="params">
			<fieldset name="advanced">
				<field name="templateColor" class="" type="color" default="#08C"
					label="TPL_DISPONIBIL_COLOR_LABEL"
					description="TPL_DISPONIBIL_COLOR_DESC" />

				<field name="templateBackgroundColor" class="" type="color" default="#F4F6F7"
					label="TPL_DISPONIBIL_BACKGROUND_COLOR_LABEL"
					description="TPL_DISPONIBIL_BACKGROUND_COLOR_DESC" />

				<field name="logoFile" class="" type="media" default=""
					label="TPL_DISPONIBIL_LOGO_LABEL"
					description="TPL_DISPONIBIL_LOGO_DESC" />
					
				<field name="sitetitle"  type="text" default=""
					label="JGLOBAL_TITLE"
					description="JFIELD_ALT_PAGE_TITLE_LABEL"
					filter="string" />

				<field name="sitedescription"  type="text" default=""
					label="JGLOBAL_DESCRIPTION"
					description="JGLOBAL_SUBHEADING_DESC"
					filter="string" />

				<field name="googleFont"
					type="radio"
					class="btn-group btn-group-yesno"
					default="1"
					label="TPL_DISPONIBIL_FONT_LABEL"
					description="TPL_DISPONIBIL_FONT_DESC"
				>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>

				<field name="googleFontName" class="" type="text" default="Open+Sans"
					label="TPL_DISPONIBIL_FONT_NAME_LABEL"
					description="TPL_DISPONIBIL_FONT_NAME_DESC" />

				<field name="fluidContainer"
					type="radio"
					class="btn-group btn-group-yesno"
					default="0"
					label="TPL_DISPONIBIL_FLUID_LABEL"
					description="TPL_DISPONIBIL_FLUID_DESC"
				>
					<option value="1">TPL_DISPONIBIL_FLUID</option>
					<option value="0">TPL_DISPONIBIL_STATIC</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>